  <header class='flex justify-between max-w-6xl mx-5 lg:mx-auto'>
    <div class="relative flex items-center my-auto">
      <%= link_to root_path, class: "h-20 text-gray-400 flex items-center" do %>
        <%= image_tag("2-2-clothes-png-clipart.png", class: "h-4/6") %>
        <h1 class="ml-1 lg:hidde">Serve pra vocÃª</h1>
      <% end %>
    </div>


    <div class="max-w-xs my-auto">
      <%= render "components/header_form" %>
    </div>

